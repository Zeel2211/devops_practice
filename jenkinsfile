// Jenkinsfile
pipeline {
  agent any

  environment {
    IMAGE_NAME = "flask-feedback-app"
    DOCKER_REGISTRY = credentials('docker-registry-cred') // optional, replace or remove
    // If you don't push, remove DOCKER_REGISTRY usage below
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Lint / Unit Tests') {
      steps {
        // add tests if you create them; placeholder command
        echo "No tests defined. Add pytest or flake8 here."
      }
    }

    stage('Build Docker Image') {
      steps {
        script {
          docker.build("${env.IMAGE_NAME}:${env.BUILD_NUMBER}")
        }
      }
    }

    stage('Push image (optional)') {
      when {
        expression { return false } // set to true if you configure registry
      }
      steps {
        script {
          docker.withRegistry("https://index.docker.io/v1/", 'docker-registry-cred') {
            sh "docker tag ${IMAGE_NAME}:${BUILD_NUMBER} ${DOCKER_REGISTRY}/${IMAGE_NAME}:${BUILD_NUMBER}"
            sh "docker push ${DOCKER_REGISTRY}/${IMAGE_NAME}:${BUILD_NUMBER}"
          }
        }
      }
    }

    stage('Deploy with docker-compose') {
      steps {
        // This assumes Jenkins node has docker-compose and permissions.
        sh '''
          # stop any running container, recreate and start background
          docker-compose down || true
          docker-compose build --no-cache
          docker-compose up -d
        '''
      }
    }
  }

  post {
    always {
      echo "Pipeline finished"
    }
  }
}
